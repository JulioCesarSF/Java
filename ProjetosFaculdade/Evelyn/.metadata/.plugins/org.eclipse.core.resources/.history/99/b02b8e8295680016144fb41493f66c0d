package br.com.fiap.exercs;

import java.util.Scanner;

public class Exerc01 {

	public static void main(String[] args) {
		try (Scanner t = new Scanner(System.in)) {

			int[][] c = new int[4][5];

			for (int i = 0; i < c.length; i++) {
				System.out.print("Digite o código do " + (i + 1) + " cliente:");
				c[i][0] = t.nextInt();
				System.out.print("Digite a quantidade de milhagem:");
				c[i][1] = t.nextInt();
				System.out.print("Digite a categoria:");
				c[i][2] = t.nextInt();

				if (c[i][2] == 1) {
					c[i][3] = 10000;
					c[i][4] = c[i][1] + c[i][3];
				} else if (c[i][2] == 2) {
					c[i][3] = 5000;
					c[i][4] = c[i][1] + c[i][3];
				} else {
					c[i][3] = 0;
					c[i][4] = c[i][1] + c[i][3];
				}
			}

			for (int i = 0; i < c.length; i++)
				System.out.println("Código cliente:\t" + c[i][0] + "\tQtd. Milhagem:\t" + c[i][1] + "\tCategoria:\t"
						+ c[i][2] + "\tBonus:\t" + c[i][3] + "\tMilhagem Atual:\t" + c[i][4]);

		} catch (Exception e) {
			System.out.println("Erro:\t" + e);
		}
	}

}
