package br.com.fiap.exercs;

import java.text.NumberFormat;
import java.util.Scanner;

public class Exerc02 {

	public static void main(String[] args) {		

		double[][] v = new double[5][5];
		double todasM = 0d;

		try (Scanner t = new Scanner(System.in)) {

			for (int i = 0; i < v.length; i++) {

				for(int j =0; j< 4;j++){
					System.out.print("Digite o valor da venda da loja " + (i+1) + " semana " + (j+1) + ":");
					v[i][j] = t.nextDouble();	
					todasM+=v[i][j];
				}
				
				//MES
				v[i][4] = todasM;
				todasM = 0d;				
			}

			/* b) Faturamento por semana de todas as lojas */
			NumberFormat n = NumberFormat.getCurrencyInstance();
			for (int i = 0; i < v.length; i++)
				System.out.println("O faturamento da loja " + (i + 1) + ":" + n.format(v[i][4]));
			
			double d = 0d;
			for (int i = 0; i < v.length; i++){
				for(int j = 0; j < v.length; j++){
					d+=v[j][i];
				}
				System.out.println("Total por semana " + (i + 1) + ":" + n.format(d));
			}
			
			

			System.out.println("Faturamento por semana todas as lojas:" + todasM);

		} catch (Exception e) {
			System.out.println("Erro: " + e);
		}

	}

}
